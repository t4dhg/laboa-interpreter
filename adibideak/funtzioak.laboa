printNumbers(1, 6)

# Baldintza eragile logikoekin (Conditional with logical operators)
funtzio adinCheck(x) {
    baldin x > 20 eta x < 40 bada:
        ageri('X 20 eta 40 artean dago')
    bestela x < 20 edo x > 40 bada:
        ageri('X ez dago 20 eta 40 artean')
}
